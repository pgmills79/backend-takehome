{
  "openapi": "3.0.1",
  "info": {
    "title": "Quote Rating Engine API",
    "version": "v1"
  },
  "paths": {
    "/api/Quotes": {
      "post": {
        "tags": [
          "Quotes"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Payload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Premium"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Payload": {
        "type": "object",
        "properties": {
          "revenue": {
            "type": "number",
            "format": "double"
          },
          "state": {
            "type": "string",
            "nullable": true
          },
          "business": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Premium": {
        "type": "object",
        "properties": {
          "premium": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      }
    }
  }
}